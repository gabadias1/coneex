    <link rel="stylesheet" href="/assets/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(120deg, #f6d365, #fda085);
            margin: 0;
        }
        .container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            padding: 2rem;
            text-align: center;
            max-width: 400px;
            width: 100%;
        }
        h1 {
            color: #333;
            margin-bottom: 1rem;
        }
        p {
            color: #666;
            margin-bottom: 2rem;
        }
        a {
            display: inline-block;
            margin: 1rem;
            padding: 10px 20px;
            font-size: 1.2rem;
            color: #fff;
            background: #fda085;
            border-radius: 5px;
            text-decoration: none;
        }
        a:hover {
            background: #f6d365;
        }
        @media (max-width: 600px) {
            a {
                display: block;
                margin: 0.5rem 0;
            }
        }
    </style>
</head>
